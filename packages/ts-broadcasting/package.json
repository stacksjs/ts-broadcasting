{
  "name": "ts-broadcasting",
  "type": "module",
  "version": "1.0.0",
  "author": "",
  "license": "MIT",
  "keywords": [
    "websocket",
    "broadcasting",
    "realtime",
    "bun",
    "laravel",
    "echo"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "broadcast": "./bin/broadcast"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "test": "bun test",
    "test:unit": "bun test test/unit/",
    "test:integration": "bun test test/integration/",
    "test:e2e": "bun test test/e2e/",
    "test:watch": "bun test --watch",
    "build": "bun --bun build.ts && bun run compile",
    "compile": "bun build ./bin/cli.ts --compile --minify --outfile bin/broadcast",
    "dev": "bun --watch bin/cli.ts start"
  }
}
